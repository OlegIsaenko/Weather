<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <EditText android:id="@+id/city_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="city:"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView android:id="@+id/condition_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/city_fragment_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter city name"
            />
    </LinearLayout>

    <Button android:id="@+id/find_city_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get city by name"/>

    <Button android:id="@+id/location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="last location"/>

    <Button android:id="@+id/location_update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update location"/>

    <Button android:id="@+id/search_city_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list"/>

    <TextView android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter city name"
        />

</LinearLayout>